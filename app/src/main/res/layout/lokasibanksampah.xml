<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90A955">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="ZeroT"
                android:textSize="50sp"/>

            <Button
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:backgroundTint="#90A955"
                android:text="Profil"
                android:onClick="profileClicked" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:text="Home"
                android:onClick="homeClicked" />

            <Button
                android:id="@+id/js1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:text="Jenis Sampah"
                android:onClick="jsClicked" />

            <Button
                android:id="@+id/jl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/js1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:text="Jual Sampah"
                android:onClick="jl1Clicked" />

            <Button
                android:id="@+id/lbs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jl1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="27sp"
                android:backgroundTint="#90A955"
                android:layout_marginBottom="50dp"
                android:text="Lokasi Bank Sampah"
                android:onClick="lbs1Clicked" />

        </RelativeLayout>

        <TextView
            android:id="@+id/lokasis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Lokasi Penjualan Sampah"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/caris"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/oval_button"
            android:drawableRight="@drawable/baseline_search_24"
            android:hint="Cari Lokasi Sampah"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/glokasi"
            android:layout_width="350dp"
            android:layout_height="329dp"
            android:layout_below="@+id/caris"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/lokasi" />

        <TextView
            android:id="@+id/lokasi1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/glokasi"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Lokasi"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="399dp"
            android:layout_height="90dp"
            android:layout_below="@+id/lokasi1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Jl. Telekomunikasi. 1, Terusan Buahbatu - Bojongsoang, Kec. Rancaekek, Kabupaten Bandung, Jawa Barat 12345"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>
