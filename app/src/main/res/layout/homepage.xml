<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90A955">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="ZeroT"
                android:textSize="50dp"/>

            <Button
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:backgroundTint="#3F4F3D"
                android:textColor="#FFFFFF"
                android:text="Profil"
                android:onClick="profileClicked" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textSize="30dp"
                android:backgroundTint="#90A955"
                android:text="Home"
                android:onClick="homeClicked" />

            <Button
                android:id="@+id/js1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:text="Jenis Sampah"
                android:onClick="jsClicked" />

            <Button
                android:id="@+id/jl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/js1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:text="Jual Sampah"
                android:onClick="jl1Clicked" />

            <Button
                android:id="@+id/lbs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jl1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20dp"

                android:layout_marginBottom="50dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:text="Lokasi Bank Sampah"
                android:onClick="lbs1Clicked" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/gambar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/gambar1"/>

        <TextView
            android:id="@+id/feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gambar1"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="FEATURE"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/gambar2"
            android:layout_width="359dp"
            android:layout_height="228dp"
            android:layout_below="@+id/feature"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/gambar2" />

        <Button
            android:id="@+id/bjs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#90A955"
            android:text="Jenis Sampah"
            android:onClick="jsClicked"
            android:layout_gravity="center"
            android:layout_below="@+id/gambar2"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/pjs"
            android:layout_width="135dp"
            android:layout_height="77dp"
            android:layout_below="@+id/bjs"
            android:layout_gravity="center"
            android:text="Lihat semua jenis sampah yang kami terima untuk di daur ulang"
            android:textAlignment="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/gambar3"
            android:layout_width="359dp"
            android:layout_height="228dp"
            android:layout_below="@+id/pjs"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/gambar3"/>

        <Button
            android:id="@+id/bjl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#90A955"
            android:layout_below="@+id/gambar3"
            android:onClick="jlClicked"
            android:layout_gravity="center"
            android:text="Jual Sampah"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/pjl"
            android:layout_width="135dp"
            android:layout_height="82dp"
            android:layout_below="@+id/bjl"
            android:layout_gravity="center"
            android:text="Anda kini dapat menjual sampah kalian untuk kami daur ulang"
            android:textAlignment="center"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/gambar4"
            android:layout_width="359dp"
            android:layout_height="228dp"
            android:layout_below="@+id/pjl"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/gambar4" />

        <Button
            android:id="@+id/blbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#90A955"
            android:onClick="blbsClicked"
            android:layout_below="@+id/gambar4"
            android:layout_gravity="center"
            android:text="Lokasi Bank Sampah"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/plbs"
            android:layout_width="138dp"
            android:layout_height="59dp"
            android:layout_below="@+id/blbs"
            android:layout_gravity="center"
            android:text="Lihat lokasi bank sampah terdekat dari tempat Anda"
            android:textSize="15dp"
            android:layout_marginBottom="50dp" />

    </LinearLayout>
</ScrollView>